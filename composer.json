{
  "name": "capesesp/php-opus",
  "type": "library",
  "description": "PHP-Opus/JSON adapter",
  "homepage": "https://git.capesesp.net/php-opus",
  "keywords": ["php", "opus", "json", "adapter"],
  "license": "MIT",
  "authors": [{
    "name": "Marcos Menegazzo",
    "email": "marcos.menegazzo@capesesp.com.br"
  }],
  "require": {
    "php": ">=5.3.2",
    "robotdance/php-i18n": "~0.0",
    "robotdance/php-app-config": "~0.0",
    "robotdance/php-arguments": "~0.0",
    "robotdance/php-console": "~0.0",
    "ext-soap": "*",
    "ext-curl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "4.8.24",
    "phpspec/phpspec": "~2.0",
    "robotdance/php-json-schema": "~2.1.0",
    "icomefromthenet/reverse-regex": "0.0.6.3"
  },
  "config": {
    "bin-dir": "bin"
  },
  "autoload": {
    "psr-4": {
      "capesesp\\": "src",
      "capesesp\\tests\\": "tests"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "capesesp\\tests\\": "tests"
    }
  }
}
