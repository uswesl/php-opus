{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "dadosBancarios",
  "description": "O cadastro de uma pessoa",
  "type": "object",
  "properties": {
    "dadosBancarios": {
      "type": "object",
      "minProperties": 1,
      "properties": {
        "dadoBancario": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "banco": {
                "description": "Representa um contato bancário para operações financeiras",
                "type": "object",
                "minProperties": 1,
                "properties": {
                  "codigo": {
                    "description": "Código do banco na FEBRABAN",
                    "type": "string",
                    "minLength": 1
                  },
                  "nome": {
                    "description": "Nome do banco",
                    "type": "string",
                    "minLenth": 1
                  }
                },
                "required": [
                  "codigo",
                  "nome"
                ]
              },
              "agencia": {
                "description": "Representa agência bancária",
                "type": "object",
                "minProperties": 1,
                "properties": {
                  "codigo": {
                    "type": "string",
                    "minLength": 1
                  },
                  "dv": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "required": [
                  "codigo",
                  "dv"
                ]
              },
              "conta": {
                "description": "Representa conta corrente",
                "type": "object",
                "minProperties": 1,
                "properties": {
                  "numero": {
                    "type": "string",
                    "minLength": 1
                  },
                  "dv": {
                    "type": "string",
                    "minLength": 0,
                    "maxLength": 2
                  }
                },
                "required": [
                  "numero", "dv"
                ]
              },
              "tipoDadoBancario": {
                "type": "string",
                "enum": [
                  "CONTA_CORRENTE_SIAPE",
                  "CONTA_CORRENTE_PAGAMENTO"
                ]
              }
            },
            "required": [
              "banco",
              "agencia",
              "conta",
              "tipoDadoBancario"
            ]
          }
        }
      }
    },
    "statusExecucao": {
      "description": "Representa dados associados à execução de um método e seus possíveis retornos.",
      "type": "object",
      "minProperties": 1,
      "properties": {
        "executadoCorretamente": {
          "description": "'executadoCorretamente' indica se o método executou sem erros ou exceções internas. Não confundir 'executado corretamente' com 'invocado corretamente",
          "type": "boolean"
        },
        "mensagens": {
          "description": "Conjunto de mensagens de retorno",
          "type": "object",
          "minProperties": 1,
          "properties": {
            "mensagem": {
              "description": "Representa uma mensagem de retorno",
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "minProperties": 1,
                "properties": {
                  "severidade": {
                    "type": "string",
                    "enum": [
                      "WARN",
                      "INFO",
                      "SUCCESS",
                      "FATAL",
                      "ERROR"
                    ]
                  },
                  "mensagem": {
                    "description": "Texto resumido da mensagem (recomendável 60 a 80 caracteres)",
                    "type": "string",
                    "minLength": 1
                  },
                  "detalhes": {
                    "description": "Mensagem detalhada (quando aplicável)",
                    "type": "string",
                    "minLength": 1
                  },
                  "codigo": {
                    "description": "Código de de erro associado à mensagem",
                    "type": "number"
                  }
                },
                "required": [
                  "severidade",
                  "mensagem",
                  "codigo"
                ]
              }
            }
          }
        }
      },
      "required": [
        "executadoCorretamente",
        "mensagens"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "statusExecucao"
  ]
}
